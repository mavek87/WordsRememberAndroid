<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.matteoveroni.wordsremember">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".WordsRemember"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:name="com.matteoveroni.wordsremember.provider.DictionaryProvider"
            android:authorities="com.matteoveroni.wordsremember.provider"
            android:exported="false" />

        <activity
            android:name=".main_menu.MainMenuActivity"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".dictionary.view.DictionaryManagementActivity"
            android:label="@string/title_activity_dictionary_management" />

        <activity
            android:name=".dictionary.view.DictionaryManipulationActivity"
            android:label="@string/title_activity_dictionary_manipulation"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".dictionary.view.DictionaryTranslationsActivity"
            android:label="@string/title_activity_dictionary_translations"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>
</manifest>