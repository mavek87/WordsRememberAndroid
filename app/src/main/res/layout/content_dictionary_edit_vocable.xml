<?xml version="1.0" encoding="utf-8"?>

<!-- Content of Dictionary Manipulation Activity -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_dictionary_manipulation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".scene_dictionary.view.activities.EditVocableActivity"
    tools:showIn="@layout/activity_dictionary_edit_vocable">

    <fragment
        android:id="@+id/dictionary_vocable_editor_fragment"
        android:name="com.matteoveroni.wordsremember.scene_dictionary.view.fragments.VocableEditorFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50" />

    <FrameLayout
        android:id="@+id/dictionary_translations_list_framelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50" />

</LinearLayout>
