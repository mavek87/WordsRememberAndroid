<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_dictionary_management_large_land"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.dictionary_management.DictionaryManagementActivity">

    <FrameLayout
        android:id="@+id/dictionary_single_container_landscape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dictionary_add_vocable"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <RelativeLayout
        android:id="@+id/dictionary_two_columns_management_container_large_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dictionary_single_container_landscape">

        <FrameLayout
            android:id="@+id/dictionary_management_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/dictionary_two_columns_splitter_large_land" />

        <View
            android:id="@+id/dictionary_two_columns_splitter_large_land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <FrameLayout
            android:id="@+id/dictionary_two_columns_manipulation_container_large_land"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dictionary_two_columns_splitter_large_land" />

    </RelativeLayout>

</RelativeLayout>
